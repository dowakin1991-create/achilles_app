import 'dart:ui';
import 'package:flutter/material.dart';

class SettingsScreen extends StatefulWidget {
  const SettingsScreen({super.key});

  @override
  State<SettingsScreen> createState() => _SettingsScreenState();
}

class _SettingsScreenState extends State<SettingsScreen> {
  // Тимчасові змінні для демонстрації інтерфейсу (згодом підключимо базу даних)
  bool _isDarkMode = true;
  String _selectedLanguage = 'Українська';
  final List<String> _languages = ['Українська', 'English'];

  @override
  Widget build(BuildContext context) {
    // Визначаємо системну тему для фону
    bool isSystemDark = Theme.of(context).brightness == Brightness.dark;

    return Scaffold(
      extendBodyBehindAppBar: true,
      appBar: AppBar(
        backgroundColor: Colors.transparent,
        elevation: 0,
        leading: IconButton(
          icon: Icon(Icons.arrow_back_ios, color: isSystemDark ? Colors.white : Colors.black87),
          onPressed: () => Navigator.of(context).pop(),
        ),
        title: Text(
          'Налаштування',
          style: TextStyle(
            color: isSystemDark ? Colors.white : Colors.black87,
            fontWeight: FontWeight.bold,
          ),
        ),
        centerTitle: true,
      ),
      body: Stack(
        children: [
          // Градієнтний фон
          Container(
            decoration: BoxDecoration(
              gradient: LinearGradient(
                colors: isSystemDark 
                    ? [const Color(0xFF121212), const Color(0xFF1A1A00)] 
                    : [const Color(0xFFF5F5F7), const Color(0xFFFFF9E6)],
                begin: Alignment.topCenter,
                end: Alignment.bottomCenter,
              ),
            ),
          ),
          
          SafeArea(
            child: ListView(
              padding: const EdgeInsets.all(24.0),
              children: [
                const SizedBox(height: 20),
                
                // Секція: Вигляд (Тема)
                _buildSectionTitle('Вигляд', isSystemDark),
                const SizedBox(height: 12),
                _buildGlassContainer(
                  isSystemDark: isSystemDark,
                  child: SwitchListTile(
                    title: Text(
                      'Темна тема',
                      style: TextStyle(color: isSystemDark ? Colors.white : Colors.black87, fontSize: 18),
                    ),
                    subtitle: Text(
                      'Економить заряд і твої очі',
                      style: TextStyle(color: isSystemDark ? Colors.white54 : Colors.black54),
                    ),
                    value: _isDarkMode,
                    activeColor: const Color(0xFFFFD700), // Золотий акцент Achilles
                    onChanged: (bool value) {
                      setState(() {
                        _isDarkMode = value;
                        // Тут згодом додамо глобальну зміну теми через Provider/Riverpod
                      });
                    },
                    secondary: Icon(
                      _isDarkMode ? Icons.dark_mode : Icons.light_mode,
                      color: isSystemDark ? Colors.white : Colors.black87,
                    ),
                  ),
                ),
                
                const SizedBox(height: 30),
                
                // Секція: Локалізація
                _buildSectionTitle('Локалізація', isSystemDark),
                const SizedBox(height: 12),
                _buildGlassContainer(
                  isSystemDark: isSystemDark,
                  child: ListTile(
                    leading: Icon(Icons.language, color: isSystemDark ? Colors.white : Colors.black87),
                    title: Text(
                      'Мова додатку',
                      style: TextStyle(color: isSystemDark ? Colors.white : Colors.black87, fontSize: 18),
                    ),
                    trailing: DropdownButtonHideUnderline(
                      child: DropdownButton<String>(
                        dropdownColor: isSystemDark ? const Color(0xFF1E1E1E) : Colors.white,
                        value: _selectedLanguage,
                        icon: Icon(Icons.arrow_drop_down, color: isSystemDark ? Colors.white : Colors.black87),
                        items: _languages.map((String value) {
                          return DropdownMenuItem<String>(
                            value: value,
                            child: Text(
                              value,
                              style: TextStyle(color: isSystemDark ? Colors.white : Colors.black87),
                            ),
                          );
                        }).toList(),
                        onChanged: (String? newValue) {
                          setState(() {
                            if (newValue != null) {
                              _selectedLanguage = newValue;
                            }
                          });
                        },
                      ),
                    ),
                  ),
                ),

                const SizedBox(height: 30),

                // Секція: Профіль користувача
                _buildSectionTitle('Мої дані', isSystemDark),
                const SizedBox(height: 12),
                _buildGlassContainer(
                  isSystemDark: isSystemDark,
                  child: Column(
                    children: [
                      _buildProfileRow('Вага', '85 кг', isSystemDark),
                      Divider(color: isSystemDark ? Colors.white24 : Colors.black12),
                      _buildProfileRow('Зріст', '182 см', isSystemDark),
                      Divider(color: isSystemDark ? Colors.white24 : Colors.black12),
                      _buildProfileRow('Ціль', 'Помірне схуднення', isSystemDark),
                    ],
                  ),
                ),
              ],
            ),
          ),
        ],
      ),
    );
  }

  // Універсальний віджет для створення "Скляних" панелей
  Widget _buildGlassContainer({required Widget child, required bool isSystemDark}) {
    return ClipRRect(
      borderRadius: BorderRadius.circular(20),
      child: BackdropFilter(
        filter: ImageFilter.blur(sigmaX: 15, sigmaY: 15),
        child: Container(
          decoration: BoxDecoration(
            color: isSystemDark ? Colors.white.withOpacity(0.05) : Colors.white.withOpacity(0.4),
            borderRadius: BorderRadius.circular(20),
            border: Border.all(
              color: isSystemDark ? Colors.white.withOpacity(0.1) : Colors.white.withOpacity(0.5),
              width: 1.5,
            ),
          ),
          child: child,
        ),
      ),
    );
  }

  // Допоміжний віджет для заголовків секцій
  Widget _buildSectionTitle(String title, bool isSystemDark) {
    return Padding(
      padding: const EdgeInsets.only(left: 8.0),
      child: Text(
        title,
        style: TextStyle(
          fontSize: 14,
          fontWeight: FontWeight.bold,
          letterSpacing: 1.2,
          color: isSystemDark ? const Color(0xFFFFD700) : const Color(0xFFB8860B), // Золотий
        ),
      ),
    );
  }

  // Допоміжний віджет для рядків профілю
  Widget _buildProfileRow(String label, String value, bool isSystemDark) {
    return ListTile(
      title: Text(label, style: TextStyle(color: isSystemDark ? Colors.white70 : Colors.black87)),
      trailing: Row(
        mainAxisSize: MainAxisSize.min,
        children: [
          Text(value, style: TextStyle(color: isSystemDark ? Colors.white : Colors.black, fontWeight: FontWeight.bold, fontSize: 16)),
          const SizedBox(width: 8),
          Icon(Icons.edit, size: 16, color: isSystemDark ? Colors.white54 : Colors.black54),
        ],
      ),
      onTap: () {
        // Тут буде відкриватися вікно для редагування даних (зміна ваги/цілі)
      },
    );
  }
}
